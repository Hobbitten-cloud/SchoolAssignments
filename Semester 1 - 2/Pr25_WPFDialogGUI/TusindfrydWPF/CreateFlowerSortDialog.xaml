<Window x:Class="TusindfrydWPF.CreateFlowerSortDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TusindfrydWPF"
        mc:Ignorable="d"
        Title="CreateFlowerSortDialog" Height="400" Width="400">
    <Grid>
        <Label Content="Navn" HorizontalAlignment="Left" Margin="27,48,0,0" VerticalAlignment="Top" Height="24" Width="63"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Center" Margin="0,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="AllFieldsChanged"/>
        <Label Content="Billede (Sti)" HorizontalAlignment="Left" Margin="27,77,0,0" VerticalAlignment="Top" Height="24" Width="73"/>
        <TextBox x:Name="PictureBox" HorizontalAlignment="Center" Margin="0,83,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" LostFocus="PictureBox_LostFocus"/>
        <Image x:Name="PictureImage" HorizontalAlignment="Left" Height="96" Margin="54,106,0,0" VerticalAlignment="Top" Width="188"/>
        <Label Content="Produktionstid" HorizontalAlignment="Left" Margin="27,210,0,0" VerticalAlignment="Top" Height="24" Width="99"/>
        <TextBox x:Name="ProductiontimeBox" HorizontalAlignment="Center" Margin="0,213,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="AllFieldsChanged"/>
        <Label Content="Halveringstid" HorizontalAlignment="Left" Margin="32,243,0,0" VerticalAlignment="Top" Height="24" Width="94"/>
        <TextBox x:Name="HalflifetimeBox" HorizontalAlignment="Center" Margin="0,249,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="AllFieldsChanged"/>
        <Label Content="Størrelse" HorizontalAlignment="Left" Margin="32,279,0,0" VerticalAlignment="Top" Height="24" Width="94"/>
        <TextBox x:Name="SizeBox" HorizontalAlignment="Center" Margin="0,285,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="18" TextChanged="AllFieldsChanged"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Margin="251,332,0,0" VerticalAlignment="Top" Width="55" Click="okButton_Click"/>
        <Button Content="Fortryd" HorizontalAlignment="Left" Margin="325,332,0,0" VerticalAlignment="Top" Width="55" Click="cancelButton_Click"/>
        <CheckBox Content="Synlig" HorizontalAlignment="Left" Margin="140,320,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" />

    </Grid>
</Window>
