@model List<Movie>

@section title 
{
    <div style="gap: 1000px" class="d-inline-flex">
        <h1>Movies:</h1>

        <a asp-controller="movies" asp-action="add" class="align-content-center btn btn-primary">Add Movie</a>
    </div>
}

@if (Model != null && Model.Count() > 0)
{
    <div style="gap: 15px" class="row">
        @foreach (var movie in Model)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>

                    <h6 class="card-subtitle mb-2 text-body-secondary">
                        @movie.ReleaseYear
                        @movie.DurationInMinutes
                        @movie.Rating
                    </h6>

                    <p class="card-text">@movie.Description</p>
                    <a asp-controller="movies" asp-action="edit" asp-route-id="@movie.MovieId" class="btn btn-primary">Edit</a>
                    <a asp-controller="movies" asp-action="delete" asp-route-id="@movie.MovieId" class="btn btn-danger" onclick="confirmDelete('@movie.Title')">Delete</a>
                </div>
            </div>
        }
    </div>
}

@section scripts
{
    <script>
        function confirmDelete(MovieTitle) 
        {
            return confirm("Are you sure you want to delete the movie: " + MovieTitle + "?");
        }
    </script>
}
