<Window x:Class="DiceGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiceGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ButtonRules" Content="Book Of Rules" HorizontalAlignment="Left" Margin="29,24,0,0" VerticalAlignment="Top" Height="40" Width="125" Click="ButtonRules_Click"/>
        <Image MouseDown="Dice1Image" x:Name="Dice1" Source="/Ressourcer/Image/1.png" HorizontalAlignment="Left" Height="100" Margin="42,149,0,0" VerticalAlignment="Top" Width="100"/>
        <Image MouseDown="Dice2Image" x:Name="Dice2" Source="/Ressourcer/Image/2.png" HorizontalAlignment="Left" Height="100" Margin="164,149,0,0" VerticalAlignment="Top" Width="100"/>
        <Image MouseDown="Dice3Image" x:Name="Dice3" Source="/Ressourcer/Image/3.png" HorizontalAlignment="Left" Height="100" Margin="288,149,0,0" VerticalAlignment="Top" Width="100"/>
        <Image MouseDown="Dice4Image" x:Name="Dice4" Source="/Ressourcer/Image/4.png" HorizontalAlignment="Left" Height="100" Margin="426,149,0,0" VerticalAlignment="Top" Width="100"/>
        <Image MouseDown="Dice5Image" x:Name="Dice5" Source="/Ressourcer/Image/5.png" HorizontalAlignment="Left" Height="100" Margin="558,149,0,0" VerticalAlignment="Top" Width="100"/>
        <Image MouseDown="Dice6Image" x:Name="Dice6" Source="/Ressourcer/Image/6.png" HorizontalAlignment="Left" Height="100" Margin="676,149,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="ButtonRoll" Content="Roll Dice" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Height="69" Width="208" Click="ButtonRoll_Click"/>

    </Grid>
</Window>
